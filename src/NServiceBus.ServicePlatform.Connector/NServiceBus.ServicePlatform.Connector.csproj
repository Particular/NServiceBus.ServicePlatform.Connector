<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net472;netcoreapp3.1</TargetFrameworks>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>$(SolutionDir)NServiceBus.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>NServiceBus.ServicePlatform.Connector</PackageId>
    <Description>Support for connecting NServiceBus endpoints to the Particular Service Plaform</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Text.Json" Version="[5,7)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NServiceBus" Version="[8.0.0-alpha.1901, 9.0.0)" />
    <PackageReference Include="NServiceBus.Heartbeat" Version="4.0.0-alpha.253" />
    <PackageReference Include="NServiceBus.CustomChecks" Version="4.0.0-alpha.98" />
    <PackageReference Include="NServiceBus.SagaAudit" Version="4.0.0-alpha.251" />
    <PackageReference Include="NServiceBus.Metrics.ServiceControl" Version="4.0.0-alpha.164" />
    <PackageReference Include="NServiceBus.Metrics" Version="4.0.0-alpha.153" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Particular.Packaging" Version="1.4.0" PrivateAssets="All" />
  </ItemGroup>

</Project>
