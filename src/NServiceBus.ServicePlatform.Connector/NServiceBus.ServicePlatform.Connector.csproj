<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net472;net6.0</TargetFrameworks>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>$(SolutionDir)NServiceBus.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>NServiceBus.ServicePlatform.Connector</PackageId>
    <Description>Support for connecting NServiceBus endpoints to the Particular Service Plaform</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Text.Json" Version="[5,7)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NServiceBus" Version="[8.0.0-rc.1, 9.0.0)" />
    <PackageReference Include="NServiceBus.Heartbeat" Version="[4.0.0-rc.1, 5.0.0)" />
    <PackageReference Include="NServiceBus.CustomChecks" Version="[4.0.0-rc.1, 5.0.0)" />
    <PackageReference Include="NServiceBus.SagaAudit" Version="[4.0.0-rc.1, 5.0.0)" />
    <PackageReference Include="NServiceBus.Metrics.ServiceControl" Version="[4.0.0-rc.1, 5.0.0)" />
    <PackageReference Include="NServiceBus.Metrics" Version="[4.0.0-rc.1, 5.0.0)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Particular.Packaging" Version="2.2.0" PrivateAssets="All" />
  </ItemGroup>

</Project>
